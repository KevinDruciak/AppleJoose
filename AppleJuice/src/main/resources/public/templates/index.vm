#set( $title = "Welcome Page" )
#parse("public/templates/top.vm")
<!html--->
#if($existinguser)
<h1>Hello $username,</h1>
    ## Account Color Variables
    #if($biasRating == 0)
        <style>
            :root {
                --color1: black;
                --color2: #acacac;
            }
        </style>
    #elseif($biasRating < 0)
        <style>
            :root {
                --color1: #005EFF;
                --color2: #D2E3FF;
            }
        </style>
    #else
        <style>
            :root {
                --color1: #ffcccc;
                --color2: #ff0000;
            }
        </style>
    #end

    <p class="linkIntro">Your bias rating is:</p>
    <a href="/stats" class="buttonBiasRating">$biasRating</a>
    <br />
    <p class="linkIntro">This type of bias is:</p>
    <a href="/stats" class="buttonBigNews">$biasName</a>
    <br />
    <p class="linkIntro">Your favorite news source is:</p>
    <a href="/stats" class="buttonBigNews">$favNews</a>
    <br />
    <p class="linkIntro">Your favorite topic is:</p>
    <a href="/stats" class="buttonBigNews">$favTopic</a>

    #parse("public/templates/ArticleCards.vm")

#else
<h1>Login to Apple Joose</h1>
<form action="/" method="post" class="content" onsubmit="return validateUsername();">
    <div class="Q1Box">
        <p>
            <label for="username">Username:</label>
            <input type="text" placeholder="username" name="username" id="username" />
        </p>
        <p>
            <label for="password">Password:</label>
            <input type="password" placeholder="password" name="password" id="password" />
        </p>
        <div class="row" id="divSubmit">
            <input type="submit" value="Sign in" class="submit" />
        </div>
    </div>

</form>
<a href="/signup" class="SignUpbutton">Create new account</a>
<script src="../js/validate.js"></script>
#end

#parse("public/templates/bottom.vm")